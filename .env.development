# =============================================================================
# MCP Platform Backend - Development Environment
# =============================================================================
# This file contains development-specific environment variables.
# Copy this to .env for local development.
# =============================================================================

# Application Configuration
APP_NAME=MCP Platform API (Dev)
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Database - MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=dev_password
MYSQL_DATABASE=mcp_platform_dev

# Database - MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=mcp_platform_dev

# Database - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Message Broker - RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# Security (Development keys - NOT FOR PRODUCTION!)
SECRET_KEY=dev-secret-key-not-for-production-use-only
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# External Services
OPENAI_API_KEY=sk-your-dev-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1
GITHUB_TOKEN=ghp_your-dev-github-token

# CORS (Allow all origins in development)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:3000","http://127.0.0.1:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting (Relaxed for development)
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_ENABLED=false

# Logging (Verbose for development)
LOG_LEVEL=DEBUG
LOG_FORMAT=text
LOG_HEALTH_CHECKS=true

# Database - Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_SCHEME=http
ELASTICSEARCH_USER=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=mcp_logs_dev

# Celery Worker Configuration
CELERY_WORKER_CONCURRENCY=2
CELERY_WORKER_PREFETCH_MULTIPLIER=2
CELERY_WORKER_MAX_TASKS_PER_CHILD=10

# Monitoring & Observability
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
