{
  "dashboard": {
    "title": "System Overview",
    "tags": ["system", "infrastructure", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "System CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU Usage", "max": 100, "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "System Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Memory Usage", "max": 100, "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Disk Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "(1 - (node_filesystem_avail_bytes / node_filesystem_size_bytes)) * 100",
            "legendFormat": "{{instance}} - {{mountpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Disk Usage", "max": 100, "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Network Traffic",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total[5m])",
            "legendFormat": "{{instance}} - RX",
            "refId": "A"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total[5m])",
            "legendFormat": "{{instance}} - TX",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "Bps", "label": "Bytes/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Redis Memory Usage",
        "type": "singlestat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "redis_memory_used_bytes / redis_memory_max_bytes",
            "refId": "A"
          }
        ],
        "format": "percentunit",
        "valueName": "current",
        "thresholds": "0.7,0.9"
      },
      {
        "id": 6,
        "title": "MySQL Connections",
        "type": "singlestat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "mysql_global_status_threads_connected",
            "refId": "A"
          }
        ],
        "format": "short",
        "valueName": "current"
      },
      {
        "id": 7,
        "title": "MongoDB Connections",
        "type": "singlestat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "mongodb_connections{state=\"current\"}",
            "refId": "A"
          }
        ],
        "format": "short",
        "valueName": "current"
      },
      {
        "id": 8,
        "title": "Elasticsearch Cluster Health",
        "type": "singlestat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 16},
        "targets": [
          {
            "expr": "elasticsearch_cluster_health_status",
            "refId": "A"
          }
        ],
        "format": "short",
        "valueName": "current",
        "valueMaps": [
          {"value": "0", "text": "Red"},
          {"value": "1", "text": "Yellow"},
          {"value": "2", "text": "Green"}
        ],
        "thresholds": "1,2",
        "colors": ["#d44a3a", "#e0b400", "#299c46"]
      }
    ]
  }
}
