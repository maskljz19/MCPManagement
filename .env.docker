# =============================================================================
# MCP Platform Backend - Docker Compose Environment
# =============================================================================
# This file is used when running the application with docker-compose.
# Service hostnames are set to match docker-compose service names.
# =============================================================================

# Application Configuration
APP_NAME=MCP Platform API
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Database - MySQL (Docker service name)
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=mcp_user
MYSQL_PASSWORD=mcp_secure_password_change_me
MYSQL_DATABASE=mcp_platform

# Database - MongoDB (Docker service name)
MONGODB_URL=mongodb://mongodb:27017
MONGODB_DATABASE=mcp_platform

# Database - Redis (Docker service name)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Message Broker - RabbitMQ (Docker service name)
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=mcp_user
RABBITMQ_PASSWORD=mcp_rabbitmq_password_change_me

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=docker-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# External Services
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1
GITHUB_TOKEN=ghp_your-github-token

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_HEALTH_CHECKS=false

# Celery Worker Configuration
CELERY_WORKER_CONCURRENCY=2
CELERY_WORKER_PREFETCH_MULTIPLIER=2
CELERY_WORKER_MAX_TASKS_PER_CHILD=10
